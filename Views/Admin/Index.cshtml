@{
    ViewData["Title"] = "Admin Console";
}

@section Styles {
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/mainbutton.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/inputbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<div class="admin-container">
    <div class="admin-header">
        Admin Console
        <a href="/Auth/Logout" class="logout-btn">Logout</a>
    </div>
    
    <!-- Admin Tabs -->
    <div class="admin-tabs">
        <button class="admin-tab active" data-tab="users">User Management</button>
        <button class="admin-tab" data-tab="posts">Post Management</button>
        <button class="admin-tab" data-tab="categories">Category Management</button>
    </div>
    
    <!-- Users Tab Content -->
    <div id="users" class="tab-content active">
        <div class="search-container">
            <div class="search-input">
                @await Component.InvokeAsync("InputBar", new {
                    targetId = "searchInput",
                    inputType = "text",
                    placeHolder = "Search by email or name...",
                    width = "100%"
                })
            </div>
        </div>
        
        <table class="user-table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Ban Reason</th>
                    <th>Expires</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="userList">
                <!-- Users will be loaded here via JavaScript -->
            </tbody>
        </table>
    </div>
    
    <!-- Posts Tab Content -->
    <div id="posts" class="tab-content">
        <div class="coming-soon">
            <h3>Post Management</h3>
        </div>
    </div>
    
    <!-- Categories Tab Content -->
    <div id="categories" class="tab-content">
        <div class="coming-soon">
            <h3>Category Management</h3>
        </div>
    </div>
</div>


<div id="banModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">Ban User</div>
        <form id="banForm" onsubmit="return false;">
            @Html.AntiForgeryToken()
            <input type="hidden" id="banUserId" name="userId" />
            <div class="form-group">
                <label for="banReason">Ban Reason:</label>
                <textarea id="banReason" name="reason" rows="4" required placeholder="Enter reason for ban..."></textarea>
            </div>
            <div class="form-group">
                <label for="durationDays">Ban Duration:</label>
                <select id="durationDays" name="durationDays">
                    <option value="1">1 Day</option>
                    <option value="7">7 Days</option>
                    <option value="30">30 Days</option>
                    <option value="90">90 Days</option>
                    <option value="365">1 Year</option>
                    <option value="36500">Permanent</option>
                </select>
            </div>
            <div class="modal-actions">
                <button type="button" class="btn-cancel" onclick="closeBanModal()">Cancel</button>
               
                <button type="button" class="btn-submit" onclick="performBan()">Ban User</button>
            </div>
        </form>
    </div>
</div>

<script src="~/js/admin.js" asp-append-version="true"></script>
